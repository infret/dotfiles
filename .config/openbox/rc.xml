<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.4/rc"
		xmlns:xi="http://www.w3.org/2001/XInclude">

<desktops>
  <number>1</number>
</desktops>

<keyboard>
  <keybind key="A-q">
    <action name="Close"/>
  </keybind>
  <keybind key="A-Tab">
    <action name="PreviousWindow">
      <finalactions>
        <action name="Focus"/>
        <action name="Raise"/>
        <action name="Unshade"/>
      </finalactions>
    </action>
  </keybind>
  <keybind key="A-t">
    <action name="Execute">
      <command>alacritty</command>
    </action>
  </keybind>
  <keybind key="A-w">
    <action name="Execute">
      <command>firefox</command>
    </action>
  </keybind>
  <keybind key="A-e">
    <action name="Execute">
      <command>webstorm</command>
    </action>
  </keybind>
  <keybind key="Print">
    <action name="Execute">
      <command>scrot -se 'xclip -selection clipboard -target image/png -i $f'
</command>
    </action>
  </keybind>
  <keybind key="XF86AudioRaiseVolume">
    <action name="Execute">
      <command>amixer set Master 5%+</command>
    </action>
  </keybind>
  <keybind key="XF86AudioLowerVolume">
    <action name="Execute">
      <command>amixer set Master 5%-</command>
    </action>
  </keybind>
  <keybind key="XF86AudioMute">
    <action name="Execute">
      <command>amixer set Master toggle</command>
    </action>
  </keybind>
  <keybind key="A-Up">
    <action name="ToggleMaximize"/>
  </keybind>
  <keybind key="A-Right">
    <action name="ResizeRelative">
      <right>10</right>
    </action>
  </keybind>
  <keybind key="A-Left">
    <action name="ResizeRelative">
      <right>-10</right>
    </action>
  </keybind>
</keyboard>

<applications>	
  <application name="*">
    <decor>no</decor>
  </application>
  <application name="chromium">
    <position>
       <x>0</x>
       <y>0</y>
    </position>
    <size>
      <width>766</width>
      <height>100%</height>
    </size>
  </application>
  <application name="webstorm">
    <position>
       <x>-0</x>
       <y>0</y>
    </position>
    <size>
      <width>600</width>
      <height>100%</height>
    </size>
  </application>
</applications>

</openbox_config>
